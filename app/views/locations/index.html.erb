<h1>Locations</h1>
<%= link_to image_tag('icons/add.png', :alt => 'Add location', :title =>'Add location')+" Add location", new_location_path %>
<table class="locations">
  <tr>
    <th>Location</th>
    <th>Address</th>
    <th>Assigned FT</th>
    <th>Actions</th>
  </tr>
  <% @location.each do |l| %>
  <tr>
    <td><%= l.name %></td>
    <td><%= l.address %></td>
    <td><%= l.user.last_name %>, <%= l.user.first_name %></td>
    <td><%= link_to image_tag('icons/magnifier.png', :alt => 'View', :title => 'View Location'), location_path(l) %><%= link_to image_tag('icons/pencil.png', :alt => 'Edit', :title => 'Edit location'), edit_location_path(l.id) %> <%= link_to image_tag('icons/delete.png', :alt => 'Delete', :title => 'Delete location'), l, :method => :delete, :confirm => 'Are you sure?', :title => "Delete #{l.name}" %></td></tr>
<% end %>
</table>