<%= stylesheet_link_tag :all %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag "jquery.min.js" %>
<%= include_tiny_mce_if_needed %>
<%= csrf_meta_tag %>
<script type="text/javascript">

$(document).ready(function () {
    $("#showcommentform").click(function() {
        $('#showcommentform').hide();
        $('#ticketcommentform').fadeIn('slow');
        positionFooter();
    });
    $("#showticketcommentslink").click(function() {
        $('#showticketcommentslink').hide();
        $('#hideticketcommentslink').fadeIn('slow');
        $('#ticketcomments').fadeIn('slow');
        positionFooter();
    });
    $("#hideticketcommentslink").click(function() {
        $('#hideticketcommentslink').hide();
        $('#showticketcommentslink').fadeIn('slow');
        $('#ticketcomments').hide();
        positionFooter();
    });
});

</script>